{
    "modules": [
        {
            "module": "local",
            "target": ["localhost"],
            "action": "apply",
            "terraform": false,
            "ansible": true,
            "playbook": "playbook.yaml"
        },
        {
            "module": "base",
            "action": "apply",
            "target": ["local", "kms-keys", "network", "iam", "ssm", "settings", "backup", "cloudwatch-alarm-topic"],
            "terraform": true,
            "ansible": false
        },
        {
            "module": "base",
            "action": "destroy",
            "target": ["cloudwatch-alarm-topic", "backup", "settings", "ssm", "iam", "network"],
            "terraform": true,
            "ansible": false
        }, 
        {
            "module": "base-vpn",
            "action": "apply",
            "target": ["base", "client-vpn"],
            "terraform": true,
            "ansible": false,
            "playbook": "playbook.yaml"
        },
        {
            "module": "base-vpn",
            "action": "destroy",
            "target": ["client-vpn", "base"],
            "terraform": true,
            "ansible": false
        },
        {
            "module": "base-bastion",
            "action": "apply",
            "target": ["base", "bastion"],
            "terraform": true,
            "ansible": true,
            "playbook": "playbook.yaml"
        },
        {
            "module": "base-bastion",
            "action": "destroy",
            "target": ["bastion", "base"],
            "terraform": true,
            "ansible": false
        },
        {
            "module": "syslog-forwarding", 
            "action": "apply",
            "target": ["bastion", "docker"],
            "terraform": false,
            "ansible": true,
            "playbook": "playbook-syslog.yaml" 
        },
        {
            "module": "syslog-docker", 
            "action": "apply",
            "target": ["syslog", "docker"],
            "terraform": false,
            "ansible": true,
            "playbook": "playbook-syslog-docker.yaml" 
        },
        {
            "module": "syslog-kafka-config", 
            "action": "apply",
            "target": ["syslog"],
            "terraform": false,
            "ansible": true,
            "playbook": "playbook-syslog-kafka.yaml" 
        },
        {
            "module": "syslog-default-config",
            "action": "apply",
            "target": ["syslog", "syslog-forwarding", "syslog-docker"], 
            "terraform": true,
            "ansible": true,
            "playbook": "playbook.yaml"
        },       
        {
            "module": "lb-container",
            "action": "apply",
            "target": ["base-bastion", "alb", "ecr"], 
            "terraform": true,
            "ansible": false
        },
        {
            "module": "lb-container",
            "action": "destroy",
            "target": ["alb", "base-bastion"],
            "terraform": true,
            "ansible": false
        },
        {
            "module": "lb-eks",
            "action": "apply",
            "target": ["lb-container", "eks"], 
            "terraform": true,
            "ansible": true
        }, 
        {
            "module": "lb-eks",
            "action": "destroy",
            "target": ["eks", "lb-container"], 
            "terraform": true,
            "ansible": false
        },                                                                          
        {
            "module": "lb-docker",
            "action": "apply",
            "target": ["lb-container", "docker", "syslog-default-config"], 
            "terraform": true,
            "ansible": true,
            "playbook": "playbook.yaml"
        },
        {
            "module": "lb-docker",
            "action": "destroy",
            "target": ["docker", "syslog", "lb-container"],
            "terraform": true,
            "ansible": false
        },
        {
            "module": "lb-apps",
            "action": "apply",
            "target": ["lb-eks", "rds-mysql", "schemas"], 
            "terraform": true,
            "ansible": true,
            "playbook": "playbook.yaml"
        },
        {
            "module": "lb-apps",
            "action": "destroy",
            "target": ["rds-mysql", "lb-eks"],
            "terraform": true,
            "ansible": false
        },
        {
            "module": "compliance",
            "action": "apply",
            "target": ["cloudtrail", "security"],
            "terraform": true,
            "ansible": false
        },
        {
            "module": "compliance",
            "action": "destroy",
            "target": ["security", "cloudtrail"],
            "terraform": true,
            "ansible": false
        }
    ],
    "resources" : [
        {
            "target": "bastion",
            "type": "vm"   
        },
        {
            "target": "docker",
            "type": "vm"
        },
        {
            "target": "syslog",
            "type": "vm"
        },
        {
            "target": "syslog-ha",
            "type": "vm"
        }
    ]
}